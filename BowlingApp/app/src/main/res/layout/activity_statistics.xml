<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="purdue.bowlingapp.StatisticsActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/averageScore"
        android:layout_width="120dp"
        android:layout_height="33dp"
        android:text="temp"
        app:layout_constraintBottom_toTopOf="@+id/bestScore"
        app:layout_constraintTop_toBottomOf="@+id/usernameText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/averageScoreText" />

    <TextView
        android:id="@+id/bestScore"
        android:layout_width="120dp"
        android:layout_height="33dp"
        android:text="temp"
        app:layout_constraintBottom_toTopOf="@+id/averageStrikes"
        app:layout_constraintTop_toBottomOf="@+id/averageScore"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/bestScoreText" />

    <TextView
        android:id="@+id/averageStrikes"
        android:layout_width="120dp"
        android:layout_height="33dp"
        android:text="temp"
        app:layout_constraintBottom_toTopOf="@+id/averageSpares"
        app:layout_constraintTop_toBottomOf="@+id/bestScore"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/averageStrikesText" />

    <TextView
        android:id="@+id/averageSpares"
        android:layout_width="120dp"
        android:layout_height="33dp"
        android:text="temp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/averageStrikes"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/averageSparesText" />

    <TextView
        android:id="@+id/bestScoreText"
        android:layout_width="120dp"
        android:layout_height="33dp"
        android:text="Best Score:"
        app:layout_constraintBottom_toTopOf="@+id/averageStrikesText"
        app:layout_constraintTop_toBottomOf="@+id/averageScoreText"
        app:layout_constraintRight_toLeftOf="@+id/bestScore"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/averageStrikesText"
        android:layout_width="120dp"
        android:layout_height="33dp"
        android:text="Average Strikes:"
        app:layout_constraintBottom_toTopOf="@+id/averageSparesText"
        app:layout_constraintTop_toBottomOf="@+id/bestScoreText"
        app:layout_constraintRight_toLeftOf="@+id/averageStrikes"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/averageSparesText"
        android:layout_width="120dp"
        android:layout_height="33dp"
        android:text="Average Spares"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/averageStrikesText"
        app:layout_constraintRight_toLeftOf="@+id/averageSpares"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/averageScoreText"
        android:layout_width="120dp"
        android:layout_height="33dp"
        android:text="Average Score:"
        app:layout_constraintBottom_toTopOf="@+id/bestScoreText"
        app:layout_constraintTop_toBottomOf="@+id/usernameText"
        app:layout_constraintRight_toLeftOf="@+id/averageScore"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/usernameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="usernameText"
        app:layout_constraintBottom_toTopOf="@+id/averageScoreText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
