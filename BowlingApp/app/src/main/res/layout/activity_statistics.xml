<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="purdue.bowlingapp.StatisticsActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
        
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:text=" TITLE"/>

        <TextView
            android:id="@+id/tv_strikePercent"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:text=" STRIKE PERCENT"/>

        <TextView
            android:id="@+id/tv_singlePinPercent"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:text=" SINGLE PIN PERCENT"/>

        <TextView
            android:id="@+id/tv_makeablePercent"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:text=" MAKEABLE PERCENT"/>

        <TextView
            android:id="@+id/tv_splitLeave"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:text=" SPLIT LEAVE"/>

        <TextView
            android:id="@+id/tv_filledFrame"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:text=" FILLED FRAME"/>
        
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
