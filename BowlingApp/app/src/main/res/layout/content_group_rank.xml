<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="purdue.bowlingapp.groupRankActivity"
    tools:showIn="@layout/activity_group_rank">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <Button
            android:id="@+id/highScoreGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High Score" />

        <Button
            android:id="@+id/averageScoreGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average Score" />

        <Button
            android:id="@+id/strikePercentGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Strike Percentage" />

        <Button
            android:id="@+id/sparePercentGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spare Percentage" />

        <Button
            android:id="@+id/singlePercentGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Single Pin Percentage" />

        <Button
            android:id="@+id/filledFramePercentGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filled Frame Percentage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Statistic to Display:"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/currentSelection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

        <Button
            android:id="@+id/goBtnGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go!" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="50sp" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp" />

</android.support.constraint.ConstraintLayout>
