<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/averageScore"
        android:layout_width="112dp"
        android:layout_height="33dp"
        android:text="Average Score:"
        tools:layout_editor_absoluteY="49dp"
        app:layout_constraintRight_toLeftOf="@+id/currAverageScore"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/averageStrikes"
        android:layout_width="112dp"
        android:layout_height="33dp"
        android:text="Average Strikes:"
        tools:layout_editor_absoluteY="110dp"
        app:layout_constraintRight_toLeftOf="@+id/currAverageStrikes"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"/>

    <TextView
        android:id="@+id/averageSpares"
        android:layout_width="112dp"
        android:layout_height="33dp"
        android:text="Average Spares:"
        tools:layout_editor_absoluteY="148dp"
        app:layout_constraintRight_toLeftOf="@+id/currAverageSpares"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/bestScore"
        android:layout_width="112dp"
        android:layout_height="33dp"
        android:text="Best Score:"
        tools:layout_editor_absoluteY="82dp"
        app:layout_constraintRight_toLeftOf="@+id/currBestScore"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/currAverageScore"
        android:layout_width="120dp"
        android:layout_height="33dp"
        android:text="temp"
        app:layout_constraintRight_toLeftOf="@+id/compAverageScore"
        app:layout_constraintLeft_toRightOf="@+id/averageScore"
        app:layout_constraintBottom_toTopOf="@+id/currBestScore"
        app:layout_constraintTop_toBottomOf="@+id/currUsername"/>

    <TextView
        android:id="@+id/currBestScore"
        android:layout_width="120dp"
        android:layout_height="33dp"
        android:text="temp"
        tools:layout_editor_absoluteY="82dp"
        app:layout_constraintRight_toLeftOf="@+id/compBestScore"
        app:layout_constraintLeft_toRightOf="@+id/bestScore"/>

    <TextView
        android:id="@+id/currAverageStrikes"
        android:layout_width="120dp"
        android:layout_height="33dp"
        android:text="temp"
        tools:layout_editor_absoluteY="115dp"
        app:layout_constraintRight_toLeftOf="@+id/compAverageStrikes"
        app:layout_constraintLeft_toRightOf="@+id/averageStrikes"/>

    <TextView
        android:id="@+id/currAverageSpares"
        android:layout_width="120dp"
        android:layout_height="33dp"
        android:text="temp"
        tools:layout_editor_absoluteY="148dp"
        app:layout_constraintRight_toLeftOf="@+id/compAverageSpares"
        app:layout_constraintLeft_toRightOf="@+id/averageSpares"/>

    <TextView
        android:id="@+id/compAverageSpares"
        android:layout_width="120dp"
        android:layout_height="33dp"
        android:text="temp"
        tools:layout_editor_absoluteY="148dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/currAverageSpares"/>

    <TextView
        android:id="@+id/compAverageScore"
        android:layout_width="120dp"
        android:layout_height="33dp"
        android:text="temp"
        tools:layout_editor_absoluteY="49dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/currAverageScore"/>

    <TextView
        android:id="@+id/compBestScore"
        android:layout_width="120dp"
        android:layout_height="33dp"
        android:text="temp"
        tools:layout_editor_absoluteY="82dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/currBestScore"/>

    <TextView
        android:id="@+id/compAverageStrikes"
        android:layout_width="120dp"
        android:layout_height="33dp"
        android:text="temp"
        tools:layout_editor_absoluteY="115dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/currAverageStrikes"/>

    <TextView
        android:id="@+id/currUsername"
        android:layout_width="120dp"
        android:layout_height="33dp"
        android:text="currentUsername"
        tools:layout_editor_absoluteX="128dp"
        app:layout_constraintBottom_toTopOf="@+id/currAverageScore"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/compUsername"
        android:layout_width="120dp"
        android:layout_height="33dp"
        android:text="comparingUsername"
        tools:layout_editor_absoluteX="248dp"
        tools:layout_editor_absoluteY="16dp" />

</android.support.constraint.ConstraintLayout>